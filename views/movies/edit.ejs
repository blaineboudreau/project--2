<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="normalize.css">
    <link rel="stylesheet" href="skeleton.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <div id="container">
   <header>
    <h1>Edit this Movie</h1>
   </header>
    <form action="/movies/<%=movie.id%>?_method=PUT" method="POST">
     <input type="text" name="title"  value="<%=movie.title%>">
     <input type="text" name="director" value="<%=movie.director%>">
     <input type="text" name="description" value="<%=movie.description%>">
     <input type="text" name="img" value="<%=movie.img%>">
     <input type="text" name="stars" value="<%=movie.stars%>">
     <input type="submit" value="Edit"/>
   </form>
    <h1>Delete this Movie</h1>
    <form action="/movies/<%=movie.id%>?_method=DELETE" method="POST">
      <input type="submit" value="Delete"/>
    </form>
  </div>
  </body>
</html>
